# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# For Docker development environment
DATABASE_URL=postgresql://medicine_user:medicine_password@postgres:5432/medicine_vending_db
POSTGRES_USER=medicine_user
POSTGRES_PASSWORD=medicine_password
POSTGRES_DB=medicine_vending_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# For local development (non-Docker)
# DATABASE_URL=postgresql://medicine_user:medicine_password@localhost:5432/medicine_vending_db
# POSTGRES_HOST=localhost

# AI/LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional for embeddings

# FastAPI Configuration
SECRET_KEY=your_secret_key_here_for_session_management
DEBUG=True
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# For Docker development environment
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://frontend:5173"]

# For production
# ALLOWED_ORIGINS=["https://ai-vending-machine.com", "https://www.ai-vending-machine.com"]

# External APIs (Optional)
PUBMED_API_KEY=your_pubmed_api_key_if_needed
WIKIPEDIA_API_BASE_URL=https://en.wikipedia.org/api/rest_v1
